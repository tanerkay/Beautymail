{
    "name": "snowfire/beautymail",
    "description": "Send beautiful html emails with Laravel",
    "keywords": ["laravel", "html", "email"],
    "license": "MIT",
    "authors": [
        {
            "name": "Emil Sundberg",
            "email": "emil@snowfire.net"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/mail": "^9.0",
        "pelago/emogrifier": "^5.0|^6.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Snowfire\\Beautymail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Snowfire\\Beautymail\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Snowfire\\Beautymail\\BeautymailServiceProvider"
            ],
            "aliases": {
                "Beautymail": "Snowfire\\Beautymail\\BeautymailFacade"
            }
        }
    }
}
